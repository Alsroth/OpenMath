<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "#715353"
    tools:context="com.example.openmath.openmath.controleur.MenuActivite">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView

        android:id="@+id/phraseDeBienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#FFFF"
        android:layout_marginTop="10dp"
        android:text="Phrase de bienvenue"
        android:fontFamily="sans-serif-smallcaps"

        android:layout_gravity="center" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#FFFF"
        android:layout_marginTop="8dp"
        android:text="Choisis une activité"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

    <Button
        android:id= "@+id/boutonMenu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:minHeight="@dimen/boutonHauteurGrandeTaille"
        android:minWidth="@dimen/boutonLargeurGrandeTaille"
        android:textSize="18dp"
        android:textColor="#fff"
        android:background="@drawable/boutoncalcul"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:text="Choix1"
        />

        <Button
            android:id= "@+id/boutonMenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:minHeight="@dimen/boutonHauteurGrandeTaille"
            android:minWidth="@dimen/boutonLargeurGrandeTaille"
            android:textSize="18dp"
            android:textColor="#fff"
            android:background="@drawable/boutonnumeration"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:text="Numération" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    <Button
        android:id= "@+id/boutonMenu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:minHeight="@dimen/boutonHauteurGrandeTaille"
        android:minWidth="@dimen/boutonLargeurGrandeTaille"
        android:textSize="18dp"
        android:textColor="#fff"
        android:background="@drawable/boutonmesure"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:text="Choix3" />

    <Button
        android:id= "@+id/boutonMenuDefi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:minHeight="@dimen/boutonHauteurGrandeTaille"
        android:minWidth="@dimen/boutonLargeurGrandeTaille"
        android:textSize="18dp"
        android:textColor="#fff"
        android:background="@drawable/boutondefi"
        android:layout_marginTop="20dp"
        android:text="DEFIS" />

    </LinearLayout>


</LinearLayout>



