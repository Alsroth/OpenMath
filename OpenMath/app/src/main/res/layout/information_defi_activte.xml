<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#715353"
    tools:context="com.example.openmath.openmath.controleur.LevelActivite">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nomDefi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NomDefi"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="46sp"
            android:textColor="#fff"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/scoreDefi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meilleur score : XXXX"
            android:textStyle="italic"

            android:textSize="20sp"
            android:textColor="#fff"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consigne :"
            android:textStyle="normal"
            android:textSize="25sp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/texteconsigne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="25sp"
            android:text="aaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaa"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout

        android:gravity="bottom"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/boutonJouer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jouer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boutonPrecedent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBoutonFond"
            android:minHeight="@dimen/boutonHauteurPetiteTaille"
            android:minWidth="@dimen/boutonLargeurPetiteTaille"
            android:textSize="@dimen/texteTaillePetiteBouton"
            android:layout_marginTop="30dp"
            android:text="PrÃ©cedent"
            android:textColor="@color/colorBoutonTexte" />


        <Button
            android:id="@+id/boutonMenuA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBoutonFond"
            android:minHeight="35dp"
            android:minWidth="80dp"
            android:textSize="8sp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="30dp"
            android:text="Menu"
            android:textColor="@color/colorBoutonTexte" />



    </LinearLayout>



</LinearLayout>
