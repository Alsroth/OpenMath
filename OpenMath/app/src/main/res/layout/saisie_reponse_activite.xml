<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ecran_jeu_nuage_sombre"
    tools:context="com.example.openmath.openmath.controleur.SaisieReponseActivite"
    tools:layout_editor_absoluteX="20dp"
    tools:layout_editor_absoluteY="20dp">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/imageVolumeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_volume_up_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textEntraineToi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entraine toi"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/boutonTest"
            android:text = "TEST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/evaluation"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/horlogeimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/horloge"
            android:visibility="visible"/>



    </LinearLayout>

    <TextView
        android:id="@+id/tempsTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titreTaille"
        android:textColor="@color/colorTexteEcranPrincipale"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="00:00">
    </TextView>


    <TextView
        android:id="@+id/enonce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titreTaille"
        android:textColor="@color/colorTexteEcranJeu"
        android:layout_marginTop="25dp"
        android:text="Enonce"
        android:layout_gravity="center">
    </TextView>

    <EditText
        android:id="@+id/champReponse"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="@dimen/titreTaille"
        android:textColor="@color/colorTexteEcranJeu"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:layout_gravity="center_vertical"
        android:inputType="phone"
        android:hint="Entrer votre reponse" />

    <TextView
        android:id="@+id/correctionReponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/texteTaille"
        android:textColor="@color/colorTexteEcranJeu"
        android:layout_marginTop="10dp"
        android:text="La bonne réponse était : XXX"
        android:layout_gravity="center">
    </TextView>

    <Button
        android:id="@+id/boutonValidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/boutonHauteurMoyenneTaille"
        android:minWidth="@dimen/boutonLargeurMoyenneTaille"
        android:textSize="@dimen/texteTailleMoyenneBouton"
        android:textColor="@color/colorBoutonTexte"
        android:background="@color/colorBoutonFond"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Valider" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boutonPrecedent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBoutonFond"
            android:minHeight="@dimen/boutonHauteurPetiteTaille"
            android:minWidth="@dimen/boutonLargeurPetiteTaille"
            android:textSize="@dimen/texteTaillePetiteBouton"
            android:layout_marginTop="20dp"
            android:text="Précedent"
            android:textColor="@color/colorBoutonTexte" />


        <Button
            android:id="@+id/boutonMenuA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBoutonFond"
            android:minHeight="35dp"
            android:minWidth="80dp"
            android:textSize="8sp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:text="Menu"
            android:textColor="@color/colorBoutonTexte" />



    </LinearLayout>

    <TextView
        android:id="@+id/numeroQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/titreTaille"
        android:textColor="@color/colorTexteEcranPrincipale"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="xx/xx">
    </TextView>




</LinearLayout>



