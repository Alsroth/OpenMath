<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bienvenue"
    tools:context="com.example.openmath.openmath.controleur.BienvenueActivite"
    android:layout_gravity="center"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nomApplication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#FFFF"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="OpenMath"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="60dp">

        <Button
            android:id= "@+id/boutonInscrire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:textSize="17sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#FFFF"
            android:background="@drawable/bouton"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="S'inscrire" />


        <Button
            android:id= "@+id/boutonConnecter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:textSize="17sp"
            android:textColor="#FFFF"
            android:fontFamily="sans-serif-smallcaps"
            android:background="@drawable/bouton"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Se Connecter" />
        <Button
            android:id= "@+id/boutonIgnorer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="17sp"
            android:textColor="#fff"
            android:background="@drawable/bouton"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"

            android:text="Ignorer " />


    </LinearLayout>










</LinearLayout>


