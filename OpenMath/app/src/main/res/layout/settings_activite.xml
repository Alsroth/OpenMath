<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/ecran_principale_colore_rose"
    tools:context="com.example.openmath.openmath.controleur.SettingsActivite"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/texteSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Settings"
        android:textSize="@dimen/titreTaille"
        android:textColor="@color/colorTexteEcranPrincipale"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="57dp" />


    <Switch
        android:id="@+id/switchSons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:checked="true"
        android:text=" Sons"
        android:textColorLink="@color/colorAccent"
        tools:textSize="24sp" />

    <Switch
        android:id="@+id/switchVibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:text=" Vibration"
        android:textColorLink="@color/colorAccent"
        tools:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/Compte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Compte :"
            android:textColor="@color/colorTexteEcranPrincipale"
            android:textSize="24sp" />

        <Button
            android:id="@+id/modifierCompte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:background="@color/colorBoutonFond"
            android:minHeight="@dimen/boutonHauteurPetiteTaille"
            android:minWidth="100dp"
            android:text="Modifier Mon compte"
            android:textColor="@color/colorBoutonTexte"
            android:textSize="@dimen/texteTaillePetiteBouton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

    <TextView
        android:id="@+id/invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Invite ami(e) :"
        android:textColor="@color/colorTexteEcranPrincipale"
        android:textSize="24sp" />

    <Button
        android:id="@+id/inviterami"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/boutonHauteurPetiteTaille"
        android:minWidth="@dimen/boutonLargeurPetiteTaille"
        android:textSize="@dimen/texteTaillePetiteBouton"
        android:textColor="@color/colorBoutonTexte"
        android:background="@color/colorBoutonFond"
        android:layout_marginLeft="130dp"
        android:text="Inviter" />

    </LinearLayout>





</LinearLayout>
